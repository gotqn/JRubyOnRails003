<%= simple_form_for @webinar, validate: true, url: @form_action_url, remote: true do |f| %>

    <%= f.input :name, label: 'Title', hint: 'Video name displayed in the webinars gallery' %>
    <%= f.input :summary, label: 'Summary notes', as: :text %>
    <%= f.input :access_type, collection: Webinar::ACCESS_TYPES_MESSAGES.first(3),
                label_method: :last,
                value_method: :first,
                as: :radio_buttons , label: 'Security access' %>
    <%= f.input :is_active, label: 'Display current video in webinars gallery' %>
    <%= f.input :video, hint: 'All video types supported' %>
    <%= f.button :submit%>

<% end %>


