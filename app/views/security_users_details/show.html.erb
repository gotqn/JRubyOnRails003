<h1 class='sub-title'><%= @current_title_text %></h1>
<div class='fieldset-display'>
    <fieldset>
      <legend>Personal Details</legend>
      <div>
        <label data-icon='!'>Faculty number:</label>
        <span><%= @security_users_detail.faculty_number %></span>
      </div>
      <div>
        <label data-icon='!'>First name:</label>
        <span><%= @security_users_detail.first_name %></span>
      </div>
      <div>
        <label data-icon='!'>Last name:</label>
        <span><%= @security_users_detail.last_name %></span>
      </div>
    </fieldset>

    <fieldset>
      <legend>Additional Information</legend>
      <div>
        <label data-icon="'">Egn:</label>
        <span><%= @security_users_detail.egn %></span>
      </div>
      <div>
        <label data-icon="'">Gender:</label>
        <span><%= @security_users_detail.gender %></span>
      </div>
    </fieldset>

    <fieldset>
      <legend>Location Details</legend>
      <div>
        <label data-icon='&'>Address:</label>
        <span><%= @security_users_detail.address %></span>
      </div>
      <div>
        <label data-icon='&'>City:</label>
        <span><%= @security_users_detail.city %></span>
      </div>
      <div>
        <label data-icon='&'>Country:</label>
        <span><%= @security_users_detail.country %></span>
      </div>
    </fieldset>

    <fieldset>
      <legend>Contact Details</legend>
      <div>
        <label data-icon='$'>Gsm:</label>
        <span><%= @security_users_detail.gsm %></span>
      </div>
      <div>
        <label data-icon='#'>Skype:</label>
        <span><%= @security_users_detail.skype %></span>
      </div>
    </fieldset>
  <%= link_to 'Edit', edit_security_users_detail_path(@security_users_detail), class:'default-btn', remote:true %>
</div>

<% content_for :footer do %>
    <%= link_to 'Back to Gallery', webinars_path, remote:true %>
<% end %>

