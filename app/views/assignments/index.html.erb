<h1>Listing assignments</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Technologies</th>
    <th>Description</th>
    <th>Status</th>
    <th>Type</th>
    <th>Is disabled</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @assignments.each do |assignment| %>
  <tr>
    <td><%= assignment.subject %></td>
    <td><%= assignment.technologies %></td>
    <td><%= assignment.description %></td>
    <td><%= assignment.status %></td>
    <td><%= assignment.type %></td>
    <td><%= assignment.is_disabled %></td>
    <td><%= link_to 'Show', assignment %></td>
    <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
    <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

