<%= simple_form_for @security_user, validate: true do |f| %>

    <%= f.input :password, label: 'Password', label_html: { 'data-icon' => 'l' },
                input_html: { placeholder:'eg. X8df!90EO'} %>
    <%= f.input :password_confirmation, label: 'Confirm Password', label_html: { 'data-icon' => 'l' },
                input_html: { placeholder:'eg. X8df!90EO'} %>

    <%= f.button :submit, 'Change Password' %>

<% end %>

