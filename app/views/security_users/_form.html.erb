<%= simple_form_for @security_user, validate: true do |f| %>

    <%= f.input :email, label: 'Email' %>
    <%= f.input :password, label: 'Password' %>
    <%= f.input :password_confirmation, label: 'Confirm Password' %>

    <%= f.input :is_active, label: 'Skip registration email confirmation',
                hint: 'If not skipped, the account is created as disabled and is activated by email',
                input_html: { checked: true } %>

    <%= f.input :language_code, collection: Hash[SecurityUser::LANGUAGE_DETAILS.map{|k, h| [k, h[:Name]]}],
                label_method: :last,
                value_method: :first,
                checked: 'EN',
                as: :radio_buttons,
                label: 'Choose language' %>

    <%= f.button :submit %>

<% end %>

