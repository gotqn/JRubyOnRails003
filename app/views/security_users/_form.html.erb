<%= simple_form_for @security_user, validate: true do |f| %>
    <%= debug @security_user %>
    <%= debug params %>
    <%= f.input :email, label: 'Email',
                label_html: { 'data-icon' => 'm'},
                input_html: { placeholder:'mysupermail@mail.com'} %>
    <%= f.input :password, label: 'Password',
                label_html: { 'data-icon' => 'l' },
                input_html: { placeholder:'eg. X8df!90EO'} %>
    <%= f.input :password_confirmation, label: 'Confirm Password',
                label_html: { 'data-icon' => 'l' },
                input_html: { placeholder:'eg. X8df!90EO'} %>

    <%= f.input :is_active, label: 'Skip registration email confirmation',
                hint: 'If not skipped, the account is created as disabled and is activated by email confirmation',
                input_html: { checked: true } %>

    <input checked='checked' class='hidden'
           id='skip_captcha' name='[skip_captcha]'
           type='checkbox' value='1'>

    <%= f.button :submit, 'Create' %>

<% end %>

