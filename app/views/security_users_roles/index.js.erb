$('.b-content-container-content').html("<%=j render template:'security_users_roles/index.html.erb', collection:@security_users_roles %>");

$(document).ready(function() {

    var container = $('#security-users-roles-accordion');

    $(container).accordion({
        collapsible: true,
        active: false,
        icons: {
            header: 'ui-icon-plus',
            activeHeader: 'ui-icon-minus'
        },
        heightStyle: 'content',
        beforeActivate: function() {
            $('.security-users-accordion').accordion('option', 'active', false);
        }
    });
    $('.security-users-accordion').accordion({
        collapsible: true,
        active: false,
        icons: {
            header: 'ui-icon-plus',
            activeHeader: 'ui-icon-minus'
        },
        heightStyle: 'fill'
    });

    $(container).find('.user-tooltip').tooltip({
        track: true,
        tooltipClass: 'user-tooltip-default'
    });
});

